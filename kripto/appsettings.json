{
  "ApiSettings": {
    "BaseUrl": "http://localhost:5000",
    "Timeout": 30,
    "RefreshInterval": 5000,
    "MaxRetries": 3
  },
  "SignalR": {
    "HubUrl": "/chathub",
    "ReconnectInterval": 5000,
    "MaxReconnectAttempts": 10
  },
  "UI": {
    "UsersRefreshInterval": 5000,
    "ChatRefreshInterval": 1000,
    "MaxMessagesInMemory": 1000
  },
  "Security": {
    "TokenExpiryCheckInterval": 300000,
    "AutoRefreshToken": true
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  }
}