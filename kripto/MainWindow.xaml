<Window x:Class="kripto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kripto"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Style="{StaticResource MaterialDesignWindow}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Background="#0d1117" 
        Grid.Row="0"
        Padding="20,16"
        BorderBrush="#21262d"
        BorderThickness="0,0,0,1">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">

                    <TextBlock Text="Kripto" 
                       VerticalAlignment="Center"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Foreground="#f0f6fc"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">

                </StackPanel>
            </DockPanel>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="1"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                Background="#161b22"
                Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Sidebar Header -->
                    <Border Grid.Row="0"
                        Padding="20,16"
                        BorderBrush="#21262d"
                        BorderThickness="0,0,0,1">
                    </Border>
                </Grid>
            </Border>


            <!-- Chat Panel -->
            <Grid Grid.Column="2" Background="#0d1117">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Chat Header -->
                <Border Grid.Row="0"
                Background="#161b22"
                Padding="24,16"
                BorderBrush="#21262d"
                BorderThickness="0,0,0,1">
                    <DockPanel>
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                            <Border Width="36" 
                            Height="36"
                            CornerRadius="18"
                            Background="#238636"
                            Margin="0,0,12,0">
                                <TextBlock x:Name="ChatAvatarText"
                                   Text="?"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock x:Name="ChatHeaderTextBlock"
                                   Text="Select a conversation"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="#f0f6fc"/>
                                <TextBlock x:Name="ChatStatusText"
                                   Text="Click on a user to start chatting"
                                   FontSize="12"
                                   Foreground="#8b949e"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                            <Border Background="#1f2937"
                            CornerRadius="4"
                            Padding="8,4"
                            Margin="0,0,12,0">
                                <TextBlock Text="🔒 E2E" 
                                   FontSize="11"
                                   Foreground="#10b981"/>
                            </Border>
                            <Button Background="Transparent"
                            BorderThickness="0"
                            Width="32"
                            Height="32"
                            FontSize="16">
                                <TextBlock Text="⋮" Foreground="#8b949e"/>
                            </Button>
                        </StackPanel>
                    </DockPanel>
                </Border>

                <!-- Messages Area -->
                <ScrollViewer x:Name="MessagesScrollViewer"
                      Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      Background="#0d1117"
                      Padding="24,16">
                    <StackPanel x:Name="MessagesPanel"/>
                </ScrollViewer>

                <!-- Message Input -->
                <Border Grid.Row="2" 
                Background="#161b22"
                Padding="24,16"
                BorderBrush="#21262d"
                BorderThickness="0,1,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0"
                        Background="#21262d"
                        CornerRadius="8"
                        BorderBrush="#30363d"
                        BorderThickness="1">
                            <Grid>
                                <TextBox x:Name="MessageTextBox"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Foreground="#f0f6fc"
                                 CaretBrush="#f0f6fc"
                                 Height="44"
                                 Padding="16,12"
                                 FontSize="14"
                                 VerticalContentAlignment="Center"
                                 KeyDown="MessageTextBox_KeyDown"
                                 IsEnabled="False"
                                 GotFocus="MessageTextBox_GotFocus"
                                 LostFocus="MessageTextBox_LostFocus"/>
                                <TextBlock x:Name="PlaceholderText"
                                   Text="Type a message..."
                                   Foreground="#6e7681"
                                   FontSize="14"
                                   Margin="16,12"
                                   VerticalAlignment="Center"
                                   IsHitTestVisible="False"/>
                            </Grid>
                        </Border>

                        <Button Grid.Column="1"
                        Background="#238636"
                        BorderThickness="0"
                        Foreground="White"
                        Width="44"
                        Height="44"
                        Margin="12,0,0,0"
                        FontSize="16"
                        Click="SendButton_Click"
                        IsEnabled="False"
                        x:Name="SendButton">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                CornerRadius="8">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#2ea043"/>
                                                    </Trigger>
                                                    <Trigger Property="IsEnabled" Value="False">
                                                        <Setter Property="Background" Value="#21262d"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Content" Value="➤"/>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

    </Grid>
        
       
</Window>
