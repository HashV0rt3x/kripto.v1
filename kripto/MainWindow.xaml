<!-- MainWindow.xaml - Improved Design -->
<Window x:Class="kripto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kripto"
        mc:Ignorable="d"
        Title="Kripto Messenger" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        MinWidth="800" MinHeight="500">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="#0d1117" 
                Grid.Row="0"
                Padding="20,16,20,16"
                BorderBrush="#21262d"
                BorderThickness="0,0,0,1">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <TextBlock Text="💬 Kripto Chat" 
                               VerticalAlignment="Center"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#f0f6fc"/>
                    <TextBlock x:Name="CurrentUserLabel"
                               Text=" - User"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="#8b949e"
                               Margin="8,0,0,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                    <!-- Connection status -->
                    <Border Background="#1f2937"
                            CornerRadius="4"
                            Padding="8,4,8,4"
                            Margin="0,0,12,0">
                        <TextBlock x:Name="ConnectionStatus"
                                   Text="🔗 Connected" 
                                   FontSize="11"
                                   Foreground="#10b981"/>
                    </Border>
                    <!-- Refresh Users Button -->
                    <Button x:Name="RefreshUsersButton"
                            Content="🔄"
                            Background="#238636"
                            BorderThickness="0"
                            Foreground="White"
                            Padding="8,4"
                            Margin="0,0,8,0"
                            ToolTip="Refresh Users List"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="1"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Chat Area -->
            <Border Grid.Column="0"
                    Background="#0d1117"
                    Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Chat Header -->
                    <Border Grid.Row="0"
                            Background="#161b22"
                            Padding="24,16,24,16"
                            BorderBrush="#21262d"
                            BorderThickness="0,0,0,1">
                        <DockPanel>
                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                                <Border x:Name="ChatUserAvatar"
                                        Width="36" 
                                        Height="36"
                                        CornerRadius="18"
                                        Background="#238636"
                                        Margin="0,0,12,0">
                                    <TextBlock x:Name="ChatAvatarText"
                                               Text="?"
                                               FontSize="16"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock x:Name="ChatHeaderTextBlock"
                                               Text="Select a user to chat"
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               Foreground="#f0f6fc"/>
                                    <TextBlock x:Name="ChatStatusText"
                                               Text="Choose from users list on the right"
                                               FontSize="12"
                                               Foreground="#8b949e"/>
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                                <Border Background="#1f2937"
                                        CornerRadius="4"
                                        Padding="8,4,8,4"
                                        Margin="0,0,12,0">
                                    <TextBlock Text="🔒 Secure" 
                                               FontSize="11"
                                               Foreground="#10b981"/>
                                </Border>
                                <Button Background="Transparent"
                                        BorderThickness="0"
                                        Width="32"
                                        Height="32"
                                        FontSize="16">
                                    <TextBlock Text="⋮" Foreground="#8b949e"/>
                                </Button>
                            </StackPanel>
                        </DockPanel>
                    </Border>

                    <!-- Messages Area -->
                    <ScrollViewer x:Name="MessagesScrollViewer" 
                                  Grid.Row="1"
                                  Background="#0d1117"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <StackPanel x:Name="MessagesPanel" 
                                    Margin="20,20,20,80">
                            <!-- Messages will be added here dynamically -->
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Separator -->
            <Border Grid.Column="1" Background="#21262d"/>

            <!-- Users Panel (Right) -->
            <Border Grid.Column="2"
                    Background="#161b22"
                    Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Users Header -->
                    <Border Grid.Row="0"
                            Padding="20,16,20,16"
                            BorderBrush="#21262d"
                            BorderThickness="0,0,0,1">
                        <TextBlock Text="👥 Online Users" 
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#f0f6fc"/>
                    </Border>

                    <!-- Search Box -->
                    <Border Grid.Row="1"
                            Padding="16,12,16,12"
                            BorderBrush="#21262d"
                            BorderThickness="0,0,0,1">
                        <Border Background="#21262d"
                                CornerRadius="6"
                                BorderBrush="#30363d"
                                BorderThickness="1">
                            <Grid>
                                <TextBox x:Name="UserSearchTextBox"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Foreground="#f0f6fc"
                                         CaretBrush="#f0f6fc"
                                         Height="32"
                                         Padding="12,8,12,8"
                                         FontSize="12"
                                         VerticalContentAlignment="Center"
                                         />
                                <!--TextChanged="UserSearchTextBox_TextChanged"-->
                                <TextBlock x:Name="SearchPlaceholder"
                                           Text="🔍 Search users..."
                                           Foreground="#6e7681"
                                           FontSize="12"
                                           Margin="12,8,12,8"
                                           VerticalAlignment="Center"
                                           IsHitTestVisible="False"/>
                            </Grid>
                        </Border>
                    </Border>

                    <!-- Users List -->
                    <ScrollViewer Grid.Row="2"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled"
                                  Padding="8,8,8,8">
                        <StackPanel x:Name="UsersListPanel">
                            <!-- Users will be added here dynamically -->
                            <TextBlock x:Name="LoadingUsersText"
                                       Text="Loading users..."
                                       Foreground="#8b949e"
                                       FontSize="12"
                                       HorizontalAlignment="Center"
                                       Margin="0,20,0,0"/>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Users Status -->
                    <Border Grid.Row="3"
                            Background="#238636"
                            Padding="16,12,16,12">
                        <StackPanel Orientation="Horizontal">
                            <Border Width="12" 
                                    Height="12"
                                    CornerRadius="6"
                                    Background="#10b981"
                                    VerticalAlignment="Center"/>
                            <TextBlock x:Name="OnlineUsersCount"
                                       Text="Online: 0"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Message Input Area -->
        <Border Grid.Row="2"
                Background="#161b22"
                Padding="20,16,20,16"
                BorderBrush="#21262d"
                BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Background="#238636"
                        BorderThickness="0"
                        Foreground="White"
                        Width="44"
                        Height="44"
                        Margin="0,0,10,0"
                        FontSize="20"
                        ToolTip="Send Message"
                        x:Name="SendButton"
                        Click="SendButton_Click"
                        IsEnabled="False">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="8"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#2ea043"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#1f7a34"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter Property="Background" Value="#21262d"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Content" Value="➤"/>
                        </Style>
                    </Button.Style>
                </Button>

                <Border Grid.Column="1"
                        Background="#21262d"
                        CornerRadius="8"
                        BorderBrush="#30363d"
                        Margin="0,0,0,0"
                        BorderThickness="1">
                    <Grid>
                        <TextBox x:Name="MessageTextBox"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Foreground="#f0f6fc"
                                 CaretBrush="#f0f6fc"
                                 Height="44"
                                 Padding="16,12,16,12"
                                 FontSize="14"
                                 VerticalContentAlignment="Center"
                                 KeyDown="MessageTextBox_KeyDown"
                                 IsEnabled="False"
                                 GotFocus="MessageTextBox_GotFocus"
                                 LostFocus="MessageTextBox_LostFocus"/>
                        <TextBlock x:Name="PlaceholderText"
                                   Text="Select a user to start chatting..."
                                   Foreground="#6e7681"
                                   FontSize="14"
                                   Margin="16,12,16,12"
                                   VerticalAlignment="Center"
                                   IsHitTestVisible="False"/>
                    </Grid>
                </Border>

                <Button Grid.Column="2"
                        Background="#238636"
                        BorderThickness="0"
                        Foreground="White"
                        Width="44"
                        Height="44"
                        Margin="10,0,0,0"
                        FontSize="16"
                        ToolTip="Attach File">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="8"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#2ea043"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#1f7a34"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Content" Value="📎"/>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <Grid x:Name="LoadingOverlay"
              Grid.RowSpan="3"
              Background="#80000000"
              Visibility="Collapsed">
            <Border Background="#161b22"
                    CornerRadius="12"
                    Width="200"
                    Height="120"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <StackPanel HorizontalAlignment="Center" 
                            VerticalAlignment="Center">
                    <TextBlock Text="⏳"
                               FontSize="32"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,12"/>
                    <TextBlock x:Name="LoadingText"
                               Text="Loading..."
                               Foreground="#f0f6fc"
                               FontSize="14"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>