<Window x:Class="kripto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kripto"
        mc:Ignorable="d"
        Title="Kripto Messenger"
        WindowStartupLocation="CenterScreen"
        Width="1000" Height="700"
        MinWidth="1000" MinHeight="700"
        ResizeMode="NoResize"
        Background="#0d1117">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="#0d1117" 
                Grid.Row="0"
                Padding="20,16,20,16"
                BorderBrush="#21262d"
                BorderThickness="0,0,0,1">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <TextBlock Text="Kripto" 
                               VerticalAlignment="Center"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#f0f6fc"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                    <!-- Connection status -->
                    <Border Background="#1f2937"
                            CornerRadius="4"
                            Padding="8,4,8,4"
                            Margin="0,0,12,0">
                        <TextBlock Text="🔗 Connected" 
                                   FontSize="11"
                                   Foreground="#10b981"/>
                    </Border>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="1"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Border Grid.Column="0"
                    Background="#161b22"
                    Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Sidebar Header -->
                    <Border Grid.Row="0"
                            Padding="20,16,20,16"
                            BorderBrush="#21262d"
                            BorderThickness="0,0,0,1">
                        <TextBlock Text="Online Users" 
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#f0f6fc"/>
                    </Border>

                    <!-- Users List -->
                    <ScrollViewer Grid.Row="1"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <StackPanel x:Name="UsersPanel" Margin="0,8,0,8">
                            <!-- Dynamic user controls will be added here -->
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Sidebar Footer -->
                    <Border Grid.Row="2"
                            Padding="12,8,12,8"
                            BorderBrush="#21262d"
                            BorderThickness="0,1,0,0">
                        <TextBlock x:Name="OnlineCountText"
                                   Text="0 users online" 
                                   FontSize="12"
                                   Foreground="#8b949e"
                                   HorizontalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Separator -->
            <Border Grid.Column="1" Background="#21262d"/>

            <!-- Chat Panel -->
            <Grid Grid.Column="2" Background="#0d1117">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Chat Header -->
                <Border Grid.Row="0"
                        Background="#161b22"
                        Padding="24,16,24,16"
                        BorderBrush="#21262d"
                        BorderThickness="0,0,0,1">
                    <DockPanel>
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                            <Border Width="36" 
                                    Height="36"
                                    CornerRadius="18"
                                    Background="#238636"
                                    Margin="0,0,12,0">
                                <TextBlock x:Name="ChatAvatarText"
                                           Text="?"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="White"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock x:Name="ChatHeaderTextBlock"
                                           Text="Select a conversation"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="#f0f6fc"/>
                                <TextBlock x:Name="ChatStatusText"
                                           Text="Click on a user to start chatting"
                                           FontSize="12"
                                           Foreground="#8b949e"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                            <Border Background="#1f2937"
                                    CornerRadius="4"
                                    Padding="8,4,8,4"
                                    Margin="0,0,12,0">
                                <TextBlock Text="🔒 E2E" 
                                           FontSize="11"
                                           Foreground="#10b981"/>
                            </Border>
                            <TextBlock x:Name="CallStatusText"
                                       Text="No active call"
                                       FontSize="12"
                                       VerticalAlignment="Center"
                                       Foreground="#8b949e"
                                       Margin="0,0,12,0"/>
                            <Button x:Name="btnCall"
                                    Background="Gray"
                                    BorderThickness="0"
                                    Width="52"
                                    Height="26"
                                    Foreground="Red"
                                    FontSize="12" Click="btnCall_Click">
                                CALL
                            </Button>
                            <Button x:Name="btnEndCall"
                                    Background="Gray"
                                    BorderThickness="0"
                                    Width="48"
                                    Height="26"
                                    IsEnabled="False"
                                    Foreground="Red"
                                    FontSize="12" Click="btnEndCall_Click">
                                END
                            </Button>
                        </StackPanel>
                    </DockPanel>
                </Border>

                <!-- Messages Area -->
                <Grid Grid.Row="1">
                    <ScrollViewer x:Name="MessagesScrollViewer"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled"
                                  Padding="20,16,20,16">
                        <StackPanel x:Name="MessagesPanel">
                            <!-- Dynamic messages will be added here -->
                        </StackPanel>
                    </ScrollViewer>
                </Grid>

                <!-- Message Input -->
                <Border Grid.Row="2"
                        Background="#161b22"
                        Padding="20,16,20,16"
                        BorderBrush="#21262d"
                        BorderThickness="0,1,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- File Upload Button -->
                        <Button Grid.Column="0"
                                Background="#238636"
                                BorderThickness="0"
                                Foreground="White"
                                Width="44"
                                Height="44"
                                Margin="0,0,12,0"
                                
                                FontSize="16">
                            <TextBlock Text="📎"/>
                        </Button>

                        <!-- Message Input Container -->
                        <Border Grid.Column="1"
                                Background="#21262d"
                                CornerRadius="22"
                                Padding="16,12,16,12">
                            <Grid>
                                <!-- Placeholder Text -->
                                <TextBlock x:Name="PlaceholderText"
                                           Text="Type a message..."
                                           FontSize="14"
                                           Foreground="#8b949e"
                                           Visibility="Visible" 
                                           VerticalAlignment="Center"
                                           IsHitTestVisible="False"/>

                                <!-- Actual TextBox -->
                                <TextBox x:Name="MessageTextBox"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         FontSize="14"
                                         Foreground="#f0f6fc"
                                         VerticalAlignment="Center"
                                         TextWrapping="Wrap"
                                         AcceptsReturn="False"
                                         MaxLines="3"
                                         GotFocus="MessageTextBox_GotFocus"
                                         LostFocus="MessageTextBox_LostFocus"
                                         KeyDown="MessageTextBox_KeyDown"/>
                            </Grid>
                        </Border>

                        <!-- Send Button -->
                        <Button x:Name="SendButton"
                                Grid.Column="2"
                                Background="#238636"
                                BorderThickness="0"
                                Foreground="White"
                                Width="44"
                                Height="44"
                                Margin="12,0,0,0"
                                FontSize="16"
                                Click="SendButton_Click">
                            <TextBlock Text="➤"/>
                        </Button>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2"
                Background="#161b22"
                Padding="20,8,20,8"
                BorderBrush="#21262d"
                BorderThickness="0,1,0,0">
            <DockPanel>
                <TextBlock DockPanel.Dock="Left"
                           Text="Ready"
                           FontSize="12"
                           Foreground="#8b949e"/>

                <TextBlock x:Name="StatusText"
                           DockPanel.Dock="Right"
                           Text="Offline"
                           FontSize="12"
                           Foreground="#8b949e"
                           HorizontalAlignment="Right"/>
            </DockPanel>
        </Border>
    </Grid>
</Window>