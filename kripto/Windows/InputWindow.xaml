<Window x:Class="kripto.Windows.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kripto.Windows"
        mc:Ignorable="d"
        Title="Input Required" Height="200" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBox x:Name="NameTextBox"  Margin="0 5"/>
            <TextBox x:Name="AgeTextBox" Margin="0 5"/>
            <TextBox x:Name="CityTextBox" Margin="0 5"/>
            <Button Content="Submit" Click="Submit_Click" Margin="0 10"/>
        </StackPanel>
    </Grid>
</Window>
