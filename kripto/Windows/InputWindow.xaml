<Window x:Class="kripto.Windows.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kripto.Windows"
        mc:Ignorable="d"
        Title="Input Required" Height="350" Width="350"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize">
    <Border CornerRadius="10" Background="BurlyWood">
        <Grid>
            <StackPanel Margin="20,20,20,20">
                <!-- LOGIN Header -->
                <Label Content="LOGIN"
                       HorizontalAlignment="Center"
                       FontSize="24"
                       Margin="0,20,0,20"/>

                <!-- IP Address Input -->
                <Label Content="IP Address:" 
                       FontWeight="Bold" 
                       Margin="0,5,0,0"/>
                <Border Background="#FFF"
                        CornerRadius="10"
                        Margin="10,0,10,0">
                    <TextBox x:Name="IpAddressTextBox"
                             Padding="5,5,5,5"
                             Height="30"
                             Text="127.0.0.1"
                             FontFamily="Dubai"
                             HorizontalAlignment="Center"
                             FontSize="14"
                             Foreground="#000000"
                             ToolTip="Enter IP address (e.g., 192.168.1.1)"
                             PreviewTextInput="IpAddressTextBox_PreviewTextInput"
                             PreviewKeyDown="IpAddressTextBox_PreviewKeyDown"
                             TextChanged="IpAddressTextBox_TextChanged" 
                             Width="116"/>
                </Border>

                <!-- Password Input -->
                <Label Content="Password:" 
                       FontWeight="Bold" 
                       Margin="0,5,0,0"/>
                <Border Background="#FFF"
                        CornerRadius="10"
                        Margin="10,0,10,0">
                    <PasswordBox x:Name="PasswordBox" 
                                 HorizontalAlignment="Center"
                                 
                                 Margin="0,0,0,0"
                                 Padding="5,5,5,5"
                                 Height="30"
                                 ToolTip="Enter your password" 
                                 Width="206"/>
                </Border>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            Margin="0,15,0,0">
                    <Button Content="Connect" 
                            BorderBrush="Transparent"
                            x:Name="ConnectButton"
                            Click="Submit_Click" 
                            Margin="0,0,10,0"
                            Width="80"
                            Height="35"
                            Background="#FF4CAF50"
                            Foreground="White"
                            FontWeight="Bold"
                            Cursor="Hand"/>
                    <Button Content="Cancel" 
                            BorderBrush="Transparent"
                            x:Name="CancelButton"
                            Click="Cancel_Click" 
                            Width="80"
                            Height="35"
                            Background="#FFF44336"
                            Foreground="White"
                            FontWeight="Bold"
                            Cursor="Hand"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>